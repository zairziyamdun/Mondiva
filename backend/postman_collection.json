        {
          "name": "Регистрация",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Тестовый пользователь\",\n  \"email\": \"test-user@example.com\",\n  \"password\": \"Password123\",\n  \"phone\": \"+7 (999) 000-00-00\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
